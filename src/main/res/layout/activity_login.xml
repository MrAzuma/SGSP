<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/fundologin"
    tools:context="com.example.ruan.sgsp.LoginActivity">

    <ImageView
        android:layout_width="260dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:id="@+id/splash"
        android:background="@drawable/modelo08" />

    <LinearLayout
        android:id="@+id/email_login_form"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu prontuario"
            android:singleLine="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_senha"
            android:hint="Digite sua senha" />

        <Button
            android:id="@+id/btn_login"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Entrar"
            android:textStyle="bold"
            android:background="#99e699"
            android:onClick="abrir_teste" />

    </LinearLayout>

</LinearLayout>